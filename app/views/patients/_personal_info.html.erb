<div class="patient-section">
  <h3>Personal Information</h3>
  <div class="info-grid">
    <div class="info-item">
      <strong>Name:</strong>
      <span><%= patient.name %></span>
    </div>
    <div class="info-item">
      <strong>Identifier:</strong>
      <span><%= patient.identifier %></span>
    </div>
    <div class="info-item">
      <strong>Date of Birth:</strong>
      <span><%= patient.dob %></span>
    </div>
    <div class="info-item">
    <strong>Contact Info</strong>
    <p><%= patient.contact_info %></p>
  </div>
  
  <div class="info-item full-width" style="background: #fff3cd; padding: 1rem; border-radius: 8px; border-left: 4px solid #ffc107;">
    <strong style="color: #856404;">‚ö†Ô∏è Allergies</strong>
    <p style="color: #856404;"><%= patient.allergies.presence || "None recorded" %></p>
  </div>
  
  <div class="info-item full-width" style="background: #d1ecf1; padding: 1rem; border-radius: 8px; border-left: 4px solid #17a2b8;">
    <strong style="color: #0c5460;">üíä Current Medications</strong>
    <p style="color: #0c5460;"><%= patient.current_medications.presence || "None recorded" %></p>
  </div>

  <div class="info-item full-width">
    <strong>Medical Notes</strong>
    <p><%= patient.medical_notes %></p>
  </div>
  </div>
  <%= link_to "Edit Info", edit_patient_path(patient), class: "button small secondary" %>
</div>
