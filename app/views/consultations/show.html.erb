<div class="patient-header">
  <div style="display: flex; align-items: center; gap: 1rem;">
    <div>
      <h1 style="margin: 0;"><%= t('consultation_details') %></h1>
      <p><%= t('patient') %>: <%= link_to @patient.name, @patient %></p>
    </div>
    <%= link_to t('prescribe_pem'), "https://pem.min-saude.pt/web/guest/home?p_p_state=maximized&p_p_mode=view&saveLastPath=false&_58_struts_action=%2Flogin%2Flogin&p_p_id=58&p_p_lifecycle=0&_58_redirect=%2Fpem", 
        class: "button primary", 
        target: "_blank", 
        style: "font-size: 0.9rem;" %>
  </div>
  <%= link_to t('back_to_patient'), @patient, class: "button secondary" %>
</div>

<div class="patient-section">
  <div class="info-grid">
    <div class="info-item">
      <strong><%= t('date_time') %></strong>
      <span><%= @consultation.date_time.strftime("%B %d, %Y at %H:%M") %></span>
    </div>
    <div class="info-item">
      <strong><%= t('location') %></strong>
      <span><%= @consultation.location.presence || t('not_specified') %></span>
    </div>
    <div class="info-item full-width">
      <strong><%= t('booking_notes') %></strong>
      <p><%= @consultation.notes %></p>
    </div>
  </div>
</div>

<div class="patient-section">
  <div class="section-header">
    <h3><%= t('consultation_summary') %></h3>
    <p class="text-muted"><%= t('record_visit') %></p>
  </div>
  
  <%= form_with(model: [@patient, @consultation], local: true) do |form| %>
    <div class="form-group">
      <%= form.text_area :summary, class: "form-control", rows: 5, placeholder: t('placeholder.consultation_summary') %>
    </div>
    <%= form.submit t('save_summary'), class: "button primary" %>
  <% end %>
</div>

<div class="patient-section">
  <div class="section-header">
    <h3><%= t('linked_exams') %></h3>
  </div>

  <% if @consultation.exams.any? %>
    <ul class="exams-list">
      <% @consultation.exams.each do |exam| %>
        <li>
          <div class="exam-info">
            <strong><%= exam.date %></strong> - <%= exam.title %>
            <% if exam.file.attached? %>
              <%= link_to t('view_file'), rails_blob_path(exam.file, disposition: "inline"), target: "_blank" %>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p><%= t('no_linked_exams') %></p>
    <p class="text-muted small"><%= t('go_to_exams') %> <%= link_to t('exams'), patient_path(@patient, tab: 'exams') %> <%= t('to_link_exam') %></p>
  <% end %>
</div>
